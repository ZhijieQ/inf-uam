	}
	
	public boolean parada(){
		return false;
	}
	public void actualizaSalida(){
		
	}
	
	
	public static void main(String [] args){
		ArrayList<Integer> capas = new ArrayList<>();
		capas.add(2);
		capas.add(3);
		capas.add(2);
		RedNeuronal rn= new RedNeuronal(capas);
		rn.iniRed();
	}

}
